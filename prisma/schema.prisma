// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}


model Product {
  id            Int     @id @default(autoincrement())
  slug          String  @unique
  title         String
  description   String
  price         Float
  manufacturer  Manufacturer[]
  packing       Packing[]
  category      Category[]
  ingredient    Ingredient[]
}

model Category {
  id            Int  @id @default(autoincrement())
  slug          String  @unique
  title         String
  product       Product[]
}

model Ingredient {
  id            Int  @id @default(autoincrement())
  slug          String  @unique
  title         String
  product       Product[]
}

model Manufacturer {
  id            Int  @id @default(autoincrement())
  slug          String  @unique
  title         String
  product       Product[]
}

model Packing {
  id            Int  @id @default(autoincrement())
  slug          String  @unique
  title         String
  product       Product[]
}