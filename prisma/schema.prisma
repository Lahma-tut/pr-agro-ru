// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}


model Product {
  id            Int     @id @default(autoincrement())
  slug          String  @unique
  title         String
  description   String
  price         Float
  category      Category[]
  tags          Tag[]
}

model Category {
  id            Int  @id @default(autoincrement())
  catSlug       String  @unique
  title         String
  product       Product[]
}

model Tag {
  id            Int  @id @default(autoincrement())
  tagSlug       String  @unique
  title         String
  product       Product[]
}
